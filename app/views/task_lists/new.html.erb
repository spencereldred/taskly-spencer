<h1 class="left-10">Add a Task List</h1>

<p class="bg-success left-10" id="no_task">
  <% if flash[:notice] %>
    <%= flash[:notice] %><br>
  <% end %>
</p>

<div id="error_message"></div>

<div id="task_list_form">
  <%= form_for @task_list do |f| %>
    <div>
      <div><%= f.label "Title", { :class => 'my_label' } %></div><br>
      <div ><%= f.text_field :name, { :class => 'my_textfield' } %>
        <p class="error" id="task_list_message" ><%= @task_list.errors.messages[:name].first %></p>
      </div><br>
    </div>
    <div>
      <%= f.submit "Create Task List",{ :class => "my_button" }%>
    </div>
  <% end %>
</div>
