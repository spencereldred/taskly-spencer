<h1 style="margin-left: 5%;text-align:left;float:left;">My Lists </h1>
  <br><br>
  <%= link_to "+ Add Task List", new_task_list_path, {:style => 'float:left; margin-left: 2%;' } %>
<br style="clear:both;"/>
<p id="task_created">
  <% if flash[:notice] %>

    <br>
    <%= flash[:notice] %><br>
    <br>

  <% end %>
</p>
<% @task_lists.each do |task_list| %>

  <section class="task-list" id="task-list-<%= task_list.id %>" >
      <h2 class="item" style="margin-left: 5%;text-align:left;float:left;width: 30%;"><%= link_to task_list.name, show_task_list_path(task_list.id), {:style => 'color: black;text-decoration: none;'} %></h2><br><br>
    <%= link_to "Edit", edit_task_list_path(task_list.id), {:style => 'margin-left: 25%; width:10%; float:left;' } %>
    <%= link_to "+ Add New Task", new_task_path(task_list.id), {:style => 'float:left;' } %>
    <br style="clear:both;">
    <% task_list.tasks.each do |task| %>
      <% unless task.completed %>
      <div class="tasks">
        <div id="task-<%= task.id%>" style="margin-left: 20px; padding-top: 12px;">
          <%= task.description  %>
          <%= link_to "Delete", delete_task_path(task.id), {:class => "delete_button"} %>
          <%= link_to "Completed", completed_task_path(task.id), {:class => "completed_button"} %>
        </div>
      </div>
        <% end %>
    <% end %>
  </section>
  <br style="clear:both;"/>

<% end %>

